{
	"name": "PokeStalgia",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Bring the hunt for pokemon to your browser.",
	"content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["pokemon.js", "pokestalgia.js"],
      "run_at": "document_idle",
      "all_frames": false
   }],
	"background": {
		"scripts": ["pokemon.js", "pokedexRepository.js", "background.js"]
	},
	"browser_action": {
		"default_icon": "resources/icon.png",
		"default_title": "Bring the hunt for pokemon to your browser.",
		"default_popup": "pokedex.html"
	},
	"content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
	"icons": {
		"128": "resources/icon.png"
	},
	"permissions": ["activeTab", "tabs", "storage"],
	"web_accessible_resources": ["pokestalgia.js", "resources/*"]
}
